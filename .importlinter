[importlinter]
root_packages =
    app

[importlinter:contract:layers]
name = Layer architecture must be respected
type = layers
layers =
    api
    routes
    core
    utils
containers =
    app

[importlinter:contract:no-api-to-routes]
name = API modules should not import from routes
type = forbidden
source_modules =
    app.api
forbidden_modules =
    app.routes

[importlinter:contract:no-core-to-api]
name = Core modules should not import from API  
type = forbidden
source_modules =
    app.core
forbidden_modules =
    app.api
    app.routes

[importlinter:contract:no-utils-to-app]
name = Utils should not import from app modules
type = forbidden
source_modules =
    app.utils
forbidden_modules =
    app.api
    app.routes
    app.core

