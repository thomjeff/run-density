# Development Environment Variables for Docker Container
# This file is used by docker-compose.yml via env_file directive

# Bin Dataset Generation (required for bins + segment metrics)
ENABLE_BIN_DATASET=true

# Segment rollups from bins (used by density_report)
SEGMENTS_FROM_BINS=true

# Analysis data directory (explicit config path for analysis.json)
DATA_ROOT=/app/data

# Output Directory (reports root)
OUTPUT_DIR=reports

# Issue #465: GCS/Cloud configuration disabled during Phase 0 (local-only mode)
# Legacy flag for cloud uploads; keep false for local-only development
GCS_UPLOAD=false

# Bin Dataset Configuration (optional)
# BIN_MAX_FEATURES=1000
# DEFAULT_BIN_TIME_WINDOW_SECONDS=300

# Issue #314: Dashboard Password Gate
DASHBOARD_PASSWORD=48THFM2026

# Issue #677: Flow parallelism tuning
RUNFLOW_FLOW_MAX_WORKERS=8
